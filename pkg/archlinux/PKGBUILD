# Maintainer: Akira Ohgaki <akiraohgaki@gmail.com>

pkgname='ocsstore'
pkgver='2.2.1'
pkgrel='1'
pkgdesc='OCS-compatible Electron-based frontend.'
arch=('i686' 'x86_64')
url='https://github.com/opendesktop/ocsstore'
license=('GPL3')
depends=('gconf' 'libxss' 'qt5-base>=5.3.0' 'qt5-websockets>=5.3.0' 'curl')
makedepends=('git' 'nodejs' 'npm' 'cmake' 'openssl' 'libcurl-gnutls' 'libxpm')
#source=("https://github.com/opendesktop/ocsstore/archive/release-${pkgver}.tar.gz")
source=("${pkgname}.tar.gz")
md5sums=() #autofill using updpkgsums

prepare() {
    #cd "${pkgname}-release-${pkgver}"
    cd "${pkgname}"
}

build() {
    #cd "${pkgname}-release-${pkgver}"
    cd "${pkgname}"
    make
}

package() {
    #cd "${pkgname}-release-${pkgver}"
    cd "${pkgname}"
    make DESTDIR="${pkgdir}" prefix="/usr" install
}
